<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andrea.ddt.Menu">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="visible">

        <com.example.andrea.custom.widgets.MenuButton
            android:id="@+id/settings_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ico_settings"
            android:text="@string/settings_button_title" />

        <com.example.andrea.custom.widgets.MenuButton
            android:id="@+id/connections_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ico_connections"
            android:text="@string/connections_button_title" />

        <com.example.andrea.custom.widgets.MenuButton
            android:id="@+id/documents_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ico_documents"
            android:text="@string/documents_button_title" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
